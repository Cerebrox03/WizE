<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Name"
        android:textColor="#ffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/flnme"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Email"
        android:textColor="#ffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/eml"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Password"
        android:textColor="#ffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/pass"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="283dp"
        android:layout_height="271dp"
        android:src="@drawable/logoforsignin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/flnme"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/outer"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="40:6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rti1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ffff"
            android:textSize="15dp"
            android:inputType="text"
            android:textColor="#ffff" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eml"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/outer"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@id/pass"
        app:layout_constraintDimensionRatio="40:6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flnme"
        app:layout_constraintVertical_bias="0.531">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rti2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ffff"
            android:textSize="15dp"
            android:inputType="text"
            android:textColor="#ffff" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/outer"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintDimensionRatio="40:6"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flnme"
        app:layout_constraintVertical_bias="0.807"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rti3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ffff"
            android:inputType="textPassword"
            android:textColor="#ffff"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:background="@drawable/signupbtn"
        android:text="Sign Up"
        android:textSize="24dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.872" />

</androidx.constraintlayout.widget.ConstraintLayout>