<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_outline___icon_only"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="330dp"
        android:layout_height="95dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="You have chance to create new account if you really want to."
        android:textColor="#474A57"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/flnme"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/allinputsignin"
        android:paddingHorizontal="15dp"
        app:hintEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rti1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ffff"
            android:drawableLeft="@drawable/ic_user"
            android:textCursorDrawable="@drawable/cursor"
            android:drawablePadding="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Full Name"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="25dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eml"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/allinputsignin"
        android:paddingHorizontal="15dp"
        app:hintEnabled="false"
        app:layout_constraintBottom_toTopOf="@id/pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flnme">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rti2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ffff"
            android:drawableLeft="@drawable/ic_mail"
            android:textCursorDrawable="@drawable/cursor"
            android:drawablePadding="15dp"
            android:fontFamily="@font/montserrat"
            android:background="@android:color/transparent"
            android:hint="Email address"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="25dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/allinputsignin"
        android:paddingHorizontal="15dp"
        app:hintEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flnme"
        app:layout_constraintVertical_bias="0.765"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rti3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ffff"
            android:drawableStart="@drawable/ic_lock"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="15dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/allbtnback"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />

</androidx.constraintlayout.widget.ConstraintLayout>