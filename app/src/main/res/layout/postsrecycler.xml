<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/postdisplaypicture"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/blankdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/likeoff"
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="@+id/postimage"
        app:layout_constraintTop_toBottomOf="@+id/postimage" />

    <TextView
        android:id="@+id/postusername"
        android:layout_width="205dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat"
        android:text="Adfab Paris"
        app:layout_constraintStart_toEndOf="@+id/postdisplaypicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/posttext"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="You can also change the background image. You can also change the background image. You can also change the background image"
        app:layout_constraintStart_toStartOf="@+id/postdisplaypicture"
        app:layout_constraintTop_toBottomOf="@+id/postdisplaypicture" />

    <ImageView
        android:id="@+id/postimage"
        android:layout_width="293dp"
        android:layout_height="241dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_logo__2_"
        app:layout_constraintStart_toStartOf="@+id/posttext"
        app:layout_constraintTop_toBottomOf="@+id/posttext" />

    <TextView
        android:id="@+id/likecount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="No. of Likes"
        app:layout_constraintStart_toEndOf="@+id/toggleButton"
        app:layout_constraintTop_toBottomOf="@+id/postimage" />

    <TextView
        android:id="@+id/comments"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postimage" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:textStyle="italic"
        android:fontFamily="@font/montserrat"
        android:text="10 Feb 2018,23:59"
        app:layout_constraintStart_toStartOf="@+id/toggleButton"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton" />

    <Button
        android:id="@+id/button"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/threedots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>